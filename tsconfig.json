{
  "compilerOptions": {
    "module": "CommonJS", // or "ESNext" if you're using ES modules
    "esModuleInterop": true,
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@pom/*": ["./src/pom/*"],
      "@src/*": ["./src/*"],
      "@data/*": ["./src/data/*"]
    }
  },
  "include": ["src"]
}
